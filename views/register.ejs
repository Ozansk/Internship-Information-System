<div class="site">
  <%- include ("./partials/messages") %>
  <div class="form-box">
    <h3 class = "top_Register">REGISTER</h3>
    <img src="../img/logo.jpg" alt="" class="logo">
      <div class="login_list_register"></div>
        <form action="/users/register" method="POST">
          <div class="form_group_register_1">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form_control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form_control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form_group_register_2">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form_control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form_control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="submit_btn">Register</button>
        </form>
        <p class="account">Have An Account? <a href="/users/login">Login</a></p>
      </div>
    </div>
</div>