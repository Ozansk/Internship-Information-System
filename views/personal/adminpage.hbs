<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/png" href="/img/mini.png" />
  <title>Internship Information System</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
  <link rel="stylesheet" href="../css/style_for_pages.css">
</head>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><img src="img/mini.png"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="../adminpage">Home<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="../holidayselector">Tatil Günü Belirleme</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="modal" data-target="#password">Şifre Değiştir</a>
          </li>
          <li>
            <span style="margin-left: 1100px; background-color: #343a40;" data-toggle="modal" data-target="#exit">
              <img src="img/logout.ico">
            </span>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- POPUP -->

    <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="modal fade" id="password">
          <div class="modal-dialog modal-sm">
            <div class="modal-content">
              <div class="modal-header">
                <h1>ŞİFRE DEĞİŞTİR</h1>
              </div>
              <div class="modal-body">
                <form action="/change_password" method="POST" class="login_list_row" id="change_password">
                  <label for="password">Password</label>
                  <input type="password" id="password" name="password" class="form-control"
                    placeholder="Create New Password" />
                  <label for="password2">Confirm Password</label>
                  <input type="password" id="password2" name="password2" class="form-control"
                    placeholder="Confirm Password" />
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="location.href=''">Geri</button>
                <button type="submit" class="btn btn-success" form="change_password">Onayla</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="modal fade" id="exit">
          <div class="modal-dialog modal-sm">
            <div class="modal-content">
              <div class="modal-header">
                <h1>ÇIKIŞ</h1>
              </div>
              <div class="modal-body">
                Çıkış yapmak istediğinize emin misiniz?
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="location.href=''">Geri</button>
                <button type="button" class="btn btn-success" onclick="location.href='/login'">Çıkış Yap</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="modal fade" id="add">
          <div class="modal-dialog modal-sm">
            <div class="modal-content">
              <div class="modal-header">
                <h1>Yeni Kullanıcı Bilgileri</h1>
              </div>
              <div class="modal-body">
                <div class="login_list">
                  <form action="/adduser" method="POST" class="login_list_row" id="registerform">
                    <div class="form_group_column">
                      <label for="name">Name</label>
                      <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" />
                      <label for="email">Email</label>
                      <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                    </div>
                    <div class="form_group_column">
                      <label for="password">Password</label>
                      <input type="password" id="password" name="password" class="form-control"
                        placeholder="Create Password" />
                      <label for="password2">Confirm Password</label>
                      <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password" />
                    </div>
                  </form>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="location.href=''">Geri</button>
                <button type="submit" class="btn btn-success" form="registerform">Kullanıcıyı Ekle</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <h3 class="top" style='text-align:center; margin-top: 40px;'>Sistemde Kayıtlı Kullanıcılar</h3>
  <!--- Image Slider -->
  <div class="row">
    <div class="pull-left">
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#add"
        style="margin-left: 1100px; margin-top:10px;">Kullanıcı Ekle</button>
    </div>

    <div class="pull-right">
      <div class="input-group">
        <div class="form-outline">
          <select form="search_form" class="form-control select2bs4" style=" margin-top:10px;" name="drop_list"
            id="drop_list" style="width: 100%">
            <option value="0">Okul Numarası</option>
            <option value="1">İsim</option>
            <option value="2">Email</option>
          </select>
        </div>
        <form action="/search" method="POST" name="search_form" id="search_form">
          <input style="margin-top:10px;" type="text" class="form-control" id="search" name="search">
        </form>
      </div>
    </div>

    <table class="table table-hover table-dark" style="width: 90%; margin-left: 75px; margin-top: 40px">
      <tr>
        <th scope="col">
          ID
        </th>
        <th scope="col">
          Name
        </th>
        <th scope="col">
          Email
        </th>
        <th scope="col">
          Type
        </th>
      </tr>

      {{#each personList}}

      <tr>
        <td>
          {{id}}
        </td>
        <td>
          {{name}}
        </td>
        <td>
          {{email}}
        </td>
        <td>
          {{type}}
        </td>
      </tr>

      {{/each}}
    </table>
    {{#if internshipList}}
    <table class="table table-hover table-dark" style="width: 90%; margin-left: 75px; margin-top: 40px">
      <tr>
        <th scope="col">
          internshipID
        </th>
        <th scope="col">
          studentID
        </th>
        <th scope="col">
          company
        </th>
        <th scope="col">
          work_day
        </th>
        <th scope="col">
          start_date
        </th>
        <th scope="col">
          finish_date
        </th>
        <th scope="col">
          confirmation
        </th>
      </tr>


      {{#each internshipList}}
      <tr>
        <td>
          {{internshipID}}
        </td>
        <td>
          {{studentID}}
        </td>
        <td>
          {{company}}
        </td>
        <td>
          {{work_day}}
        </td>
        <td>
          {{start_date}}
        </td>
        <td>
          {{finish_date}}
        </td>
        {{#if confirmation}}
        <td><img src="/img/Checkmark.png" alt="" border=3 height=50 width=50></img></td>
        {{else}}
        <td><img src="/img/crossmark.png" alt="" border=3 height=50 width=50></img></td>
        {{/if}}
      </tr>

      {{/each}}
      {{/if}}
    </table>
  </div>


  <footer class="footer">
    <div class="container">
      <div class="social">
        <ul class="media">
          <li><a href="#"><i class="fab fa-facebook" aria-hidden="true"></i></a></li>
          <li><a href="#"><i class="fab fa-twitter" aria-hidden="true"></i></a></li>
          <li><a href="#"><i class="fab fa-google-plus-g" aria-hidden="true"></i></a></li>
          <li><a href="#"><i class="fab fa-linkedin" aria-hidden="true"></i></a></li>
          <li><a href="#"><i class="fab fa-instagram" aria-hidden="true"></i></a></li>
        </ul>
      </div>
    </div>
  </footer>





</body>

</html>