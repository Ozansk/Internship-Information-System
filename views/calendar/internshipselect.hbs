  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
  <link href="https://cdn.rawgit.com/dubrox/Multiple-Dates-Picker-for-jQuery-UI/master/jquery-ui.multidatespicker.css"
    rel="stylesheet" />
  <script
    src="https://cdn.rawgit.com/dubrox/Multiple-Dates-Picker-for-jQuery-UI/master/jquery-ui.multidatespicker.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>


  <script>

    //getter
    var firstDay = $('.selector').datepicker('option', 'firstDay');
    //setter
    $('.selector').datepicker('option', 'firstDay', 1);
    $(document).ready(function () {
      var today = new Date();
      var y = today.getFullYear();
      var days = $('#days').val();
      var temp = [];
      for (i = 0; i < days.length; i = i + 11) {
        date = days.slice(i, i + 10);
        temp.push(date);
      }
      $('#mdp-demo').multiDatesPicker({
        addDisabledDates: temp,
        numberOfMonths: [3, 4],
        defaultDate: '1/1/' + y,
        altField: '#altField',
        maxPicks: 2,
      });
    });

    (function (factory) {
      if (typeof define === "function" && define.amd) {

        // AMD. Register as an anonymous module.
        define(["../widgets/datepicker"], factory);
      } else {

        // Browser globals
        factory(jQuery.datepicker);
      }
    }(function (datepicker) {

      datepicker.regional.tr = {
        closeText: "kapat",
        prevText: "&#x3C;geri",
        nextText: "ileri&#x3e",
        currentText: "bugün",
        monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran",
          "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
        monthNamesShort: ["Oca", "Şub", "Mar", "Nis", "May", "Haz",
          "Tem", "Ağu", "Eyl", "Eki", "Kas", "Ara"],
        dayNames: ["Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi"],
        dayNamesShort: ["Pz", "Pt", "Sa", "Ça", "Pe", "Cu", "Ct"],
        dayNamesMin: ["Pz", "Pt", "Sa", "Ça", "Pe", "Cu", "Ct"],
        weekHeader: "Hf",
        firstDay: 1,
        isRTL: false,
        showMonthAfterYear: false,
        yearSuffix: ""
      };
      datepicker.setDefaults(datepicker.regional.tr);
      return datepicker.regional.tr;
    }));
  </script>

  <script type="text/javascript">
    $(function () {
      $('#datepicker1').multiDatesPicker({
        dateformat: "d/m/y"
      });
      $('#datepicker2').multiDatesPicker();
    });
  </script>

</head>



<body>
  <!--  {{#if message}}
  <div class="alert">{{message}}</div>
  {{/if}}  -->


  <form action="/select" method="POST" id="loginform">

    <label;" for="form1">Company Name</label;"><br>
    <input type="text" id="form1" name="form1" class="form-control" placeholder="Company Name" required>

    <label;" for="form2">Work Day</label;"><br>
    <input type="number" id="form2" name="form2" class="form-control" placeholder="Work Day" required>


    <input type="checkbox" id="country" name="country" value="country">
    <label for="country"> Yurtdışında stajımı gerçekleştireceğim</label><br>
    <input type="checkbox" id="saturday" name="saturday" value="saturday">
    <label for="saturday"> Cumartesi günlerinde de staj yapacağım</label><br>
    <input type="checkbox" id="sunday" name="sunday" value="sunday">
    <label for="sunday"> Pazar günlerinde de staj yapacağım</label><br>

    <br>
    <div id="mdp-demo"><input name="form3" id="altField" type="hidden"></div>

    {{#if error_message}}
    <div class="alert" style="margin-top: 10px;">{{error_message}}</div>
    <textarea id="area" name="area"
      placeholder="Lütfen geçerli nedeni ve tatil günlerini belirteceğiniz bir metin yazınız."
      style="font-size: 18pt; height: 300px; width:500px; float: left; margin-top: 5px;"></textarea>
    {{/if}}

  </form>
  <button type="submit" class="submit_btn" form="loginform">Confirm</button>
  <div id="temp"><input name="form4" id="days" value={{days}} type="hidden"></div>

</body>


